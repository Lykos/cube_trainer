<h1>Timer</h1>
<p><%= @input_item.representation %></p>
<p>
  <div>Time:</div>
  <div id='timer'></div>
</p>
<p><%= button_to 'Stop timer', action: :stop, params: { id: @input.id, time_s: 10 } %></p>
<%= javascript_pack_tag 'timer', 'data-turbolinks-track': 'reload' %>
<script type="text/javascript">
  // TODO Migrate to unobstrusive JS.
  timer = new Timer(document.getElementById('timer'));
  timer.start();
</script>
<%= render 'results_table' %>

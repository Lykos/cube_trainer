<h1>Timer</h1>
<p><%= @input_item.representation %></p>
<p><%= button_to 'Stop timer', action: :stop, params: { id: @input.id, time_s: 10 } %></p>
<div id='timer'><div>
<%= javascript_include_tag 'timer' %>
<script type="text/javascript">
  timer = Timer.new(document.getElementById('timer'));
  timer.start();
</script>
